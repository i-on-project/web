<div class="container-fluid pageBeginning">
    
    <div class="row row-content justify-content-center">
        <h3>Definições</h3>
    </div>

    <div class="container"></div>
        <div class="row row-content align-items-center divSpacing">
            <div class="col-12 col-sm-2">
                <h5>Nome de utilizador: </h5>       
                <p>{{user.username}}</p>
            </div>
            <div class="col-12">
                <button id="editButton" onclick=edit() class="btn btn-outline-dark">Editar perfil</button>  

                <form id="settingsForm" method="POST" action="/settings" style="display:none">
                
                    <label class="col-sm-2 col-form-label">Nome de utilizador:</label><br>
                    <input type="text" class="form-control col-sm-5" name="description" required>
                    <br>
                    <button type="submit" class="btn btn-dark">Guardar alterações</button>
                    <button  type="button" onclick=back() class="btn btn-outline-dark">Cancelar</button>  
                     
                </form><br>

                  
            </div>
        </div>
    </div>
</div>

<script>

    function edit(){
        $('#editButton').hide();
        $('#settingsForm').show();
    }

    function back() {
        $('#editButton').show();
        $('#settingsForm').hide();
    }

</script>
