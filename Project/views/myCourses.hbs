<div class="container-fluid pageBeginning">

    <h3 class="text-center">As minhas disciplinas</h3>
    <div class="divSpacing">
        {{#if selectedCourses}}
            {{#each selectedCourses}}
                {{#each this.classes}}
                <div class="boxes" role="alert">
                {{../this.name}} - {{this}}
                </div>
                {{/each}}
            {{/each}}
        {{else}}
            <p class="text-center">Ainda não estás inscrito a nenhuma disciplina.</p>
        {{/if}}
    </div>
    <div class="divSpacing"> <!-- TO DO: href is hardcoded for testing, change it -->
        <a class="btn btn-outline-dark" href="#" role="button">Anular selecções</a>
        <a class="btn btn-outline-dark pull-right" href="/programmeOffers/1" role="button">Selecionar disciplinas <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
    </div>
</div>