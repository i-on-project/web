# Image version from which we'll build our app.
FROM node:14

ARG OPERATION_MODE
ARG CORE_URL
ARG CORE_READ_TOKEN
ARG CORE_CLIENT_ID
ARG CORE_CLIENT_SECRET
ARG DB_ELASTIC_URL
ARG PATH_PREFIX

ENV OPERATION_MODE=$OPERATION_MODE
ENV CORE_URL=$CORE_URL
ENV CORE_READ_TOKEN=$CORE_READ_TOKEN
ENV CORE_CLIENT_ID=$CORE_CLIENT_ID
ENV CORE_CLIENT_SECRET=$CORE_CLIENT_SECRET
ENV DB_ELASTIC_URL=$DB_ELASTIC_URL
ENV PATH_PREFIX=$PATH_PREFIX

WORKDIR /web

COPY package*.json ./

RUN npm install

# Bundle app source
COPY . .

CMD [ "node", "i-on-web-server.js" ]